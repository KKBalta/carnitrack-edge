{
  "name": "carnitrack-edge",
  "version": "0.1.0",
  "description": "CarniTrack Edge Service - DP-401 Scale Integration for Meat Traceability",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "db:setup": "bun run src/storage/setup.ts",
    "typecheck": "tsc --noEmit",
    "mock:cloud": "bun run src/cloud/mock-server.ts",
    "dev:all": "bun run mock:cloud & sleep 1 && bun run dev",
    "env:create": "bun scripts/create-env.ts",
    "env:template": "bun scripts/create-env.ts --template"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "carnitrack",
    "meat-traceability",
    "dp-401",
    "scale-integration",
    "edge-computing"
  ],
  "author": "CarniTrack Team",
  "license": "UNLICENSED",
  "engines": {
    "bun": ">=1.0.0"
  }
}
